{
  "framework": "mocha",
  "src_files": [
    "node_modules/chai/chai.js",
    "lib/**/*.js",
    "test/setup.js",
    "test/*.test.js"
  ],
  "launchers": {
    "node": {
      "command": "./node_modules/.bin/mocha -r test/setup.js -R tap test/*.test.js",
      "protocol": "tap"
    }
  },
  "launch_in_dev": [
    "node", "chrome", "firefox", "safari"
  ],
  "serve_files": [ "tmp/tests.js" ],
  "before_tests": "mkdir -p tmp && browserify test/suite.js -o tmp/tests.js --ignore-missing",
  "on_exit": "rm -rf tmp"
}