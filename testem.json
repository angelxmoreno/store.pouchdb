{
  "framework": "mocha",
  "src_files": [
    "node_modules/chai/chai.js",
    "lib/**/*.js",
    "test/utils/setup.js",
    "test/*.test.js"
  ],
  "launchers": {
    "node": {
      "command": "npm run mocha",
      "protocol": "tap"
    }
  },
  "launch_in_dev": [
    "node", "chrome"
  ],
  "serve_files": [ "tmp/tests.js" ],
  "before_tests": "npm run create-tmp && npm run create-suite && npm run browserify",
  "on_exit": "npm run clean"
}